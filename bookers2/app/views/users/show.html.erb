<div class="container">
  <div class="row">
    <div class="col-md-3">
      
    <%= render 'layouts/user_info' ,user: @user %>
      
      <h2>New book</h2>
      <div class="error-message">
        <% if @book.errors.any? %>
        <%= @book.errors.count %>error has occurred
          <ul>
            <li><% @book.errors.full_messages.each do |message| %>
            <%= message %>
            </li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model:@book, local:true do |f| %>
      
        <div class="form">Title</div>
        <%= f.text_field :title %>
      
        <div class="form">Opnion</div>
        <%= f.text_area :body %>
      
        <div class="submit">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1 ">
      <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opnion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, format: 'jpeg',size: "50x50" ,fallback: "/assets/user-regular.svg" %>
              <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>