<div class="container">
  <div class="row">
    <div class="col-md-3">

    <%= render 'layouts/user_info' ,user: current_user %>

      <h2>New book</h2>
      <div class="error-message">
        <% if @book.errors.any? %>
        <%= @book.errors.count %>error has occurred
          <ul>
            <li><% @book.errors.full_messages.each do |message| %>
            <%= message %>
            </li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model:@book, local:true do |f| %>

        <div class="form">Title</div>
        <%= f.text_field :title %>

        <div class="form">Opnion</div>
        <%= f.text_area :body %>

        <div class="submit">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, format: 'jpeg',size: "50x50" ,fallback: "/assets/user-regular.svg"%></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show",user_path(user.id) %></td>
            </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>